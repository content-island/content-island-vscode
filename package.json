{
  "name": "content-island-vscode",
  "publisher": "content-island",
  "displayName": "Content Island",
  "description": "Manage and edit your Content Island content directly from VSCode with seamless integration.",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/content-island/content-island-vscode.git"
  },
  "keywords": [
    "content island",
    "content management",
    "headless cms",
    "vscode",
    "vscode extension",
    "cms",
    "content editing",
    "api integration",
    "editor",
    "productivity",
    "content workflow"
  ],
  "author": "Content Island",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/content-island/content-island-vscode/issues"
  },
  "homepage": "https://github.com/content-island/content-island-vscode#readme",
  "main": "./dist/index.js",
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "start": "npm run build -- --watch --sourcemap",
    "build": "vite build",
    "test": "vitest -c ./config/test/config.ts",
    "changeset": "changeset",
    "build:package": "npm run build && vsce package --out ./dist",
    "publish:package": "changeset tag && vsce publish --packagePath ./dist/*.vsix",
    "prepare": "husky || echo 'Husky is not installed'"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^22.18.12",
    "@types/vscode": "^1.105.0",
    "@vscode/vsce": "^3.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-externalize-deps": "^0.10.0",
    "vitest": "^4.0.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.52.5"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "onUri",
    "onFileSystem:content-island-scheme"
  ],
  "categories": [
    "Other"
  ],
  "icon": "./assets/app-icon.webp",
  "galleryBanner": {
    "color": "#17191E",
    "theme": "dark"
  },
  "qna": false,
  "contributes": {
    "configuration": {
      "title": "Content Island",
      "properties": {
        "contentIsland.domain": {
          "type": "string",
          "default": "api.contentisland.net",
          "markdownDescription": "%configuration.domain.description%"
        },
        "contentIsland.loginDomain": {
          "type": "string",
          "default": "app.contentisland.net",
          "markdownDescription": "%configuration.loginDomain.description%"
        },
        "contentIsland.apiVersion": {
          "type": "string",
          "default": "1.0",
          "markdownDescription": "%configuration.apiVersion.description%"
        },
        "contentIsland.secureProtocol": {
          "type": "boolean",
          "default": "true",
          "markdownDescription": "%configuration.secureProtocol.description%"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "contentIsland",
          "title": "%extension.name%",
          "icon": "./assets/explorer-icon.webp"
        }
      ]
    },
    "views": {
      "contentIsland": [
        {
          "id": "contentIslandExplorer",
          "name": "%extension.name%",
          "icon": "./assets/explorer-icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "content-island-vscode.openFile",
        "title": "%commands.openFile.title%",
        "icon": "$(go-to-file)"
      },
      {
        "command": "content-island-vscode.deleteFile",
        "title": "%commands.deleteFile.title%",
        "icon": "$(trash)"
      },
      {
        "command": "content-island-vscode.pullContent",
        "title": "%commands.pullContent.title%",
        "icon": "$(cloud-download)"
      },
      {
        "command": "content-island-vscode.pushContent",
        "title": "%commands.pushContent.title%",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "content-island-vscode.discard",
        "title": "%commands.discard.title%",
        "icon": "$(discard)"
      },
      {
        "command": "content-island-vscode.refreshTree",
        "title": "%commands.refresh.title%",
        "icon": "$(refresh)"
      }
    ],
    "viewsWelcome": [
      {
        "view": "contentIslandExplorer",
        "contents": "%viewExplorer.content%"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "content-island-vscode.refreshTree",
          "when": "view == contentIslandExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "content-island-vscode.openFile",
          "when": "view == contentIslandExplorer && (viewItem == field || viewItem == field-pull)",
          "group": "inline@1"
        },
        {
          "command": "content-island-vscode.pullContent",
          "when": "view == contentIslandExplorer && (viewItem == content || viewItem == content-pull || viewItem == field || viewItem == field-pull)",
          "group": "inline@2"
        },
        {
          "command": "content-island-vscode.pushContent",
          "when": "view == contentIslandExplorer && (viewItem == content-push || viewItem == content-pull-push || viewItem == field-push || viewItem == field-pull-push)",
          "group": "inline@2"
        },
        {
          "command": "content-island-vscode.discard",
          "when": "view == contentIslandExplorer && (viewItem == content-push || viewItem == content-pull-push || viewItem == field-push || viewItem == field-pull-push)",
          "group": "inline@3"
        },
        {
          "command": "content-island-vscode.deleteFile",
          "when": "view == contentIslandExplorer && (viewItem == content || viewItem == content-pull || viewItem == content-push || viewItem == content-pull-push || viewItem == field || viewItem == field-pull || viewItem == field-push || viewItem == field-pull-push)",
          "group": "inline@4"
        }
      ],
      "editor/title": [
        {
          "command": "content-island-vscode.pullContent",
          "when": "resourceScheme == content-island-scheme",
          "group": "navigation"
        },
        {
          "command": "content-island-vscode.pushContent",
          "when": "resourceScheme == content-island-scheme",
          "group": "navigation"
        }
      ]
    }
  },
  "dependencies": {
    "@content-island/vscode-api-client": "0.1.0"
  }
}
