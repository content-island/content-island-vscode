{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "baseUrl": "./src/",
    "paths": {
      "#*": ["*"]
    }
  },
  "include": ["src/**/*", "config/test/config.d.ts"]
}
